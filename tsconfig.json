{
    "compilerOptions": {
      "target": "es5",
      "module": "es2015",
      "strict": true,
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./",
      "paths": {
        "@/*": ["resources/js/*"]
      },
      "typeRoots": [
            "./node_modules/@types",
            "./resources/js/types"  // Add this line
        ]
    },
    "include": ["resources/js/**/*.ts", "resources/js/**/*.tsx", "resources/js/**/*.d.ts"]
  }